{
  "manifest_version": 3,
  "name": "Shortmoji — Emoji Shortcodes",
  "version": "1.1.0",
  "description": "The colon is mightier than the mouse. Type :emoji: shortcodes anywhere — no picker, no hunting, no nonsense.",
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "shortmoji@svenmeys.dev",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["emoji-data.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
